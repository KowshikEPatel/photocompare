<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Cute or not</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <style>
            .title{
            background-color: #500707;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .brand{
            font-size: 2.5rem; 
            font-weight: 550; 
            color: aliceblue;
        }
        .links{
            color: blueviolet;
            font-weight: 550;
        }
        </style>
        <style>
            .images{
                    width:100%;
                    height:auto;
                    border: 2px solid black;
                    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
                    }
        </style>
    </head>
    <body>
        <div class="row title">
            <p class="brand">Facemash</p>
            <nav>
                <a class="navi-item btn btn-light" href="/"><i class="fas fa-home"></i><div class="links">Cute or Not</div></a>
                <a class="navi-item btn btn-light" href="/add"><i class="fas fa-upload"></i> <div class="links">Upload</div></a>
                <a class="navi-item btn btn-light" href="/allimages"><i class="far fa-images"></i> <div class="links">All images</div></a>
            </nav>
        </div>
        <div class="container">
            <div class="row" id="images">

            </div>
        </div>
        <script>
            
            function createDomMani(ele,eleClassName="",...arr){
                var element1=document.createElement(ele);
   
                element1.setAttribute("class",eleClassName);
    
                for(let iter=0;iter<arr.length;iter++){
                    if(arr[iter].includes("=")){
                    let attreibute,attributename;
                    [attreibute,attributename]=arr[iter].split("=");
                    element1.setAttribute(attreibute,attributename);
                    }
                    else{
                        element1.innerHTML=arr[iter];
                }    
            }
                return element1;
            }
            JSON.parse(sessionStorage.getItem('images')).map(e=>{
                let colelement = createDomMani("div","col-lg-3")
                let cardlelement = createDomMani("div","card")
                let imageele = createDomMani("img","card-img-top",`src=/image/${e["filename"]}`)
                cardlelement.append(imageele)
                colelement.append(cardlelement)
                document.getElementById("images").append(colelement)

            })
        </script>
    </body>
</html>