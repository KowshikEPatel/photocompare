<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>photo compare application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .images{
                width:100%;
                height:auto;
                border: 2px solid black;
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <h1>Photo compare application</h1>
        </div>
        <div class="row">
            <div class="col-lg-5">
                <img id="image1" class="images"  alt="guvi image">
                <div>
                    <button class="btn btn-primary mt-2 px-2" onclick='clickprint()'>
                        üëçUpvote
                    </button>
                </div>
            </div>
            <div class="col-lg-2">
                OR
            </div>
            <div class="col-lg-5">
                <img id="image2" class="images"  alt="guvi image">
                <div>
                    <button class="btn btn-primary mt-2 px-2" onclick='clickprint()'>
                        üëç Upvote
                    </button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">

            </div>
            <div class="col-lg-4">
                <a class="btn btn-dark" href="/add" ><i class="fas fa-upload"> Upload</i></a>
            </div>
            <div class="col-lg-4">
                <a class="btn btn-dark" href="/allimages" ><i class="far fa-images"> All images </i></a>
            </div>
        </div>
    </div>
    
    <script>
        fetch("/files")
        .then(response=>response.json())
        .then(data=>{
            
            document.getElementById("image1").src = `/image/${data[3]["filename"]}`
            document.getElementById("image2").src = `/image/${data[2]["filename"]}`
            sessionStorage.setItem('images',JSON.stringify(data))
        })
        function clickprint(){
            console.log(sessionStorage.getItem('images'))
            let data = JSON.parse(sessionStorage.getItem('images'))
            console.log(data)
            document.getElementById("image2").src = `/image/${data[4]["filename"]}`
        }
        
    </script>
    
</body>
</html>