<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>photo compare application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    
    <style>
        .images{
                width:475px;
                height:auto;
                border: 1px solid black;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <h1>Photo compare application</h1>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <img id="image1" class="images"  alt="guvi image">
                <div>
                    <button class="btn btn-primary mt-2 px-2" onclick='clickprint()'>
                        üëçUpvote
                    </button>
                </div>
            </div>
            <div class="col-lg-6">
                <img id="image2" class="images"  alt="guvi image">
                <div>
                    <button class="btn btn-primary mt-2 px-2" onclick='clickprint()'>
                        üëç Upvote
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        fetch("/files")
        .then(response=>response.json())
        .then(data=>{
            
            document.getElementById("image1").src = `/image/${data[3]["filename"]}`
            document.getElementById("image2").src = `/image/${data[2]["filename"]}`
            sessionStorage.setItem('images',JSON.stringify(data))
        })
        function clickprint(){
            console.log(sessionStorage.getItem('images'))
        }
        
    </script>
    
</body>
</html>